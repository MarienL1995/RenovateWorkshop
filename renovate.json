{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "schedule": [
    "* 15 * * *"
  ],
  "timezone": "GMT",
  "prConcurrentLimit": 10,
  "packageRules": [
    {
      "matchUpdateTypes": ["patch", "pin", "digest"],
      "automerge": true,
      "automergeType": "pr-comment",
      "automergeComment": "bors: r+"
    },
    {
      "matchUpdateTypes": ["major", "minor"],
      "automerge": false
    }
  ]
}
